extends layout

block content
   h1 Update Book 
   form(action=`/books/${book.id}`, method="post")
      if errors
         h2(class="error") Ooooops!
         ul(class="error")
            for error in errors 
               li= error.message
      p 
         label(for="title") Title: 
         input(type="text", name="title", id="title", value=`${book.title}`)
      p 
         label(for="author") Author: 
         input(type="text", name="author", id="author", value=`${book.author}`)
      p 
         label(for="genre") Genre: 
         input(type="text", name="genre", id="genre", value=`${book.genre}`)
      p 
         label(for="year") Year: 
         input(type="text", name="year", id="year", value=`${book.year}`)
      p 
         input(class="submit", type="submit", value="Update Book")

   form(action=`${book.id}/delete`, method="post")
      p 
         a(class="button", href="/books") Cancel 
      p 
         input(class="delete", type="submit", value="Delete Book")